{
  "include": [
    "src/**/*",
    "main.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client", "electron"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
